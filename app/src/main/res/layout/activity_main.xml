<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/bg_main"
            tools:context=".ui.activity.MainActivity">


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="@dimen/gwm_dp_40"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/ic_index_setting"
                android:padding="@dimen/gwm_dp_5"
                android:visibility="gone"
                android:layout_marginStart="@dimen/gwm_dp_5"
                android:id="@+id/iv_setting2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="@dimen/gwm_dp_40"
                android:layout_height="@dimen/gwm_dp_40"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="@dimen/gwm_dp_40"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/ic_music_open"
                android:id="@+id/iv_music_status"
                android:layout_marginEnd="@dimen/gwm_dp_5"
                android:padding="@dimen/gwm_dp_5"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/gwm_dp_40"
                android:layout_height="@dimen/gwm_dp_40"/>


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_top"
                android:layout_marginTop="@dimen/gwm_dp_80"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:src="@mipmap/bg_main_top"
                android:paddingHorizontal="@dimen/gwm_dp_50"
                android:layout_marginHorizontal="@dimen/gwm_dp_50"
                android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_rongyi"
                android:id="@+id/iv_rongyi"
                app:layout_constraintTop_toBottomOf="@id/iv_top"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_kunnan"
                android:id="@+id/iv_kunnan"
                app:layout_constraintTop_toBottomOf="@id/iv_rongyi"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_diyu"
                android:id="@+id/iv_diyu"
                app:layout_constraintTop_toBottomOf="@id/iv_kunnan"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_setting"
                android:id="@+id/iv_setting"
                app:layout_constraintTop_toBottomOf="@id/iv_diyu"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_marginTop="400dp"
                android:layout_width="@dimen/gwm_dp_150"
                android:src="@mipmap/ic_player"
                android:id="@+id/iv_play"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="@dimen/gwm_dp_40"/>


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gwm_dp_50"
                android:layout_width="@dimen/gwm_dp_150"
                android:src="@mipmap/ic_setting"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_play"

                android:visibility="gone"
                android:layout_height="@dimen/gwm_dp_40"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center"
                app:layout_constraintRight_toRightOf="@id/iv_setting"
                app:layout_constraintLeft_toLeftOf="@id/iv_setting"
                app:layout_constraintTop_toBottomOf="@id/iv_setting"
                android:layout_marginTop="@dimen/gwm_dp_10"
                android:layout_width="0dp"
                android:background="@drawable/bg_radius_blue_8"
                android:id="@+id/iv_xieyi"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Privacy Agreement"
                android:layout_height="@dimen/gwm_dp_40"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/iv_xieyi"
                app:layout_constraintRight_toRightOf="@id/iv_setting"
                app:layout_constraintLeft_toLeftOf="@id/iv_setting"
                android:layout_marginTop="@dimen/gwm_dp_10"
                android:layout_width="0dp"
                android:visibility="gone"
                android:background="@drawable/bg_radius_blue_8"
                android:id="@+id/iv_music"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Music"
                android:layout_height="@dimen/gwm_dp_40"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>